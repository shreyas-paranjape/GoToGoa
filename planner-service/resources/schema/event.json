{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Event",
  "description": "A thing of importance",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "duration": {
      "type": "number"
    },
    "activity_id": {
      "type":"integer"
    },
    "site_id": {
      "type":"integer"
    },
    "starts": {
      "type": "object",
      "description": "Specifies the recurrence rule",
      "properties": {
        "frequency": {
          "type":"integer",
          "description": "Allowed values: daily=1,weekly=7,monthly=30,yearly=365"
        },
        "offset": {
          "type" "object",
          "description": "Start identifier within a given period in the frequency"
          "properties": {
            "kind":{
              "type": "integer",
              "description": "day_of_week=0,day_of_month=1 etc etc"
            }
            "value": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
